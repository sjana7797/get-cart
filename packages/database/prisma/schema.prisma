generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  mobile
  laptop
  tablet
  headphone
  earphone
  smartwatch
  camera
}

model Product {
  id            String   @id @default(uuid())
  name          String
  price         Float
  brandId       String
  brand         Brand    @relation(fields: [brandId], references: [id])
  description   String?
  productImages String[]
  category      Category
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String?
  profileImg String?
  hashedPass String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Banner {
  id        String   @id @default(uuid())
  image     String
  active    Boolean
  href      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Brand {
  id      String    @id @default(uuid())
  name    String
  Product Product[]
}
